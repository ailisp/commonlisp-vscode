{
    "name": "commonlisp-vscode",
    "displayName": "commonlisp-vscode",
    "description": "Common Lisp Editing Extension for vscode",
    "version": "0.0.2",
    "publisher": "ailisp",
    "repository": {
        "type": "git",
        "url": "https://github.com/ailisp/commonlisp-vscode"
    },
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:commonlisp"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "commonlisp",
                "aliases": [
                    "Common Lisp",
                    "commonlisp"
                ],
                "extensions": [
                    ".lisp",
                    ".cl",
                    ".lsp",
                    ".asdf",
                    ".asd",
                    ".ros"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "commonlisp",
                "scopeName": "source.commonlisp",
                "path": "./syntaxes/commonlisp.tmLanguage"
            }
        ],
        "commands": [
            {
                "command": "lisp.replStart",
                "title": "Lisp: REPL - start"
            },
            {
                "command": "lisp.compileAndLoadFile",
                "title": "Lisp: Compile And Load File"
            },
            {
                "command": "lisp.eval",
                "title": "Lisp: Evaluate",
                "when": "editorTextFocus"
            },
            {
                "command": "lisp.interrupt",
                "title": "Lisp: Interrupt"
            },
            {
                "command": "lisp.newlineAndFormat",
                "title": "Lisp: Newline and Format"
            }
        ],
        "keybindings": [
            {
                "command": "lisp.newlineAndFormat",
                "key": "enter",
                "when": "editorLangId == commonlisp && editorTextFocus && !editorReadOnly"
            }
        ],
        "configuration": [
            {
                "title": "Common Lisp",
                "type": "object",
                "properties": {
                    "commonlisp.lsppath": {
                        "type": "string",
                        "description": "Language server path",
                        "default": "cl-lsp",
                        "scope": "window"
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.30.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "eslint": "^6.8.0",
        "@typescript-eslint/parser": "^2.26.0",
        "@typescript-eslint/eslint-plugin": "^2.26.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.1",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    },
    "dependencies": {
        "vscode-languageclient": "^6.1.3"
    }
}